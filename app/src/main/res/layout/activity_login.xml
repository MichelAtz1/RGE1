<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoapp"
    tools:context="br.desenvolvedor.michelatz.aplicativohcc.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/border"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:text="@string/txt_email"
                        android:textSize="20sp"
                        android:layout_marginLeft="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textSize="20sp"
                        android:ems="10"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#fff"
                        android:id="@+id/edtEmailUsuario"
                        android:hint="@string/txt_email"
                        android:textColorHint="#FFF"
                        android:drawableLeft="@drawable/ic_action_mail"/>

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <TextView
                        android:text="@string/txt_senha"
                        android:textSize="20sp"
                        android:layout_marginLeft="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="20sp"
                        android:ems="10"
                        android:typeface="serif"
                        android:textColor="#fff"
                        android:id="@+id/edtSenhaUsuario"
                        android:hint="@string/hint_senha"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="#FFF"
                        android:drawableLeft="@drawable/ic_action_lock_closed" />

                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bt_entrar"
                        android:textSize="20sp"
                        android:background="@drawable/botao"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:onClick="entrarAplicativo"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:id="@+id/btEntrar" />
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="30dp"
                        android:textSize="16sp"
                        android:onClick="botaoCadastrarUsuario"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/txt_link" />

                </TableRow>

            </TableLayout>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="183dp"
                app:srcCompat="@drawable/androidsamhcc"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/descricao_icon_inicial" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>