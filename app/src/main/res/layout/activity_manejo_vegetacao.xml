<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccc"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="br.desenvolvedor.michelatz.aplicativohcc.ManejoVegetacao">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border">


                <TableLayout
                    android:id="@+id/tabela"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tvResposta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="2"
                            android:layout_marginLeft="10dp"
                            android:text="Insira os Postes:"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">
<!--
                        <Spinner
                            android:id="@+id/spnNomeDocumentos"
                            android:layout_width="180dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_span="2"
                            android:background="@drawable/botao" />
-->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Poste 1:"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <EditText
                            android:id="@+id/textDescricaoVegetacaoPoste1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:ems="10"
                            android:hint="Insira o poste 1 Aqui!"
                            android:inputType="number"
                            android:textSize="15sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Poste 2:"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <EditText
                            android:id="@+id/textDescricaoVegetacaoPoste2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:ems="10"
                            android:hint="Insira o poste 2 Aqui!"
                            android:inputType="number"
                            android:textSize="15sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/foto"
                            android:layout_width="200dp"
                            android:layout_height="300dp"
                            android:layout_marginTop="10dp"
                            android:layout_span="2"
                            android:contentDescription="@string/descricao_imagem_camera"
                            app:srcCompat="@drawable/foto" />

                    </TableRow>

                    <TableRow
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/botao"
                            android:onClick="foto"
                            android:text="@string/bt_tirar_foto" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_span="2"
                            android:background="@drawable/botao"
                            android:onClick="salvarImagemDocumento"
                            android:text="@string/bt_salvar" />

                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
